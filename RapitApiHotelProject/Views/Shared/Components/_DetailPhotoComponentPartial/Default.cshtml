@model RapitApiHotelProject.Models.GetPhotoViewModel

<div class="row mb-5">
    <div class="col-lg-8">
        <div class="hotel-main-image">
            <img src="@Model.data[0].url" alt="Hotel Name" class="img-fluid">
        </div>
    </div>
    <div class="col-lg-4">
        <div class="hotel-thumbnail-gallery">
            <div class="row">
                @for (int i = 1; i < Model.data.Count && i < 8; i++)
                {
                    <div class="col-6 mb-3">
                        <img src="@Model.data[i].url" alt="Hotel image @i" class="img-fluid thumbnail">
                    </div>
                }

                <div class="col-12">
                    <a href="#photo-gallery-modal" class="btn btn-outline-primary w-100" data-toggle="modal">
                        View All Photos (@Model.data.Count)
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="photo-gallery-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Hotel Name - Photo Gallery</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    @for (int i = 0; i < Model.data.Count; i++)
                    {
                        <div class="col-md-4 mb-4">
                            <img src="@Model.data[i].url" alt="Hotel photo @i" class="img-fluid">
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>