
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Layout/Index.cshtml";
}


<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="hero-text">
                    <h1>Sona A Luxury Hotel</h1>
                    <p>
                        Here are the best hotel booking sites, including recommendations for international
                        travel and for finding low-priced hotel rooms.
                    </p>
                    <a href="#" class="primary-btn">Discover Now</a>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 offset-xl-2 offset-lg-1">
                <div class="booking-form">
                    <h3>Search Your Hotel</h3>
                    <form method="post" class="reservation-form">
                        <div class="form-group">
                            <label for="city">Şehir:</label>
                            <input type="text" class="form-control" name="location" id="city" placeholder="Örn: İstanbul, Paris, New York" required>
                        </div>
                        <div class="form-group">
                            <label for="date-in">Giriş Tarihi:</label>
                            <input type="date" class="form-control" name="checkin" id="date-in" required placeholder="Giriş yapacağınız tarihi seçin">
                        </div>
                        <div class="form-group">
                            <label for="date-out">Çıkış Tarihi:</label>
                            <input type="date" class="form-control" name="checkout" id="date-out" required placeholder="Çıkış yapacağınız tarihi seçin">
                        </div>
                        <div class="form-group">
                            <label for="guest">Yetişkin Sayısı:</label>
                            <input type="number" class="form-control" name="adult" id="guest" min="1" required placeholder="Örn: 2">
                        </div>
                        <div class="form-group">
                            <label for="children">Çocuk Sayısı:</label>
                            <input type="number" class="form-control" name="child" id="children" min="0" required placeholder="Örn: 1">
                        </div>
                        <button type="submit" class="btn btn-primary">En İyİ Otelleri Ara</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-1.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/sona-master/img/hero/hero-3.jpg"></div>
    </div>
</section>
@await Component.InvokeAsync("_AboutComponentPartial")
@await Component.InvokeAsync("_OurServicesComponentPartial")
@await Component.InvokeAsync("_TestimonialComponentPartial")



